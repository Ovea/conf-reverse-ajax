<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <context-param>
        <param-name>org.eclipse.jetty.servlet.Default.maxCachedFiles</param-name>
        <param-value>0</param-value>
    </context-param>

    <context-param>
        <param-name>org.eclipse.jetty.servlet.Default.maxCacheSize</param-name>
        <param-value>0</param-value>
    </context-param>

    <session-config>
        <session-timeout>20</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>ChatPollingServlet</servlet-name>
        <servlet-class>ChatPollingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChatPollingServlet</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>

</web-app>
